
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context="at.itkolleg.android.noterra.Holzablagerungen"
              android:background="@color/Hintergrundfarbe" android:focusableInTouchMode="true">

    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:focusableInTouchMode="true">

            <Spinner android:id="@+id/Spinner01"
                     android:layout_width="match_parent"
                     android:layout_marginLeft="5dp"
                     android:layout_marginRight="5dp"
                     android:layout_height="50dp"
                     android:layout_marginTop="10dp"
                     android:background="@drawable/spinner_style"

                    />

            <Spinner android:id="@+id/Spinner02"
                     android:layout_width="match_parent"
                     android:layout_marginLeft="5dp"
                     android:layout_marginRight="5dp"
                     android:layout_height="50dp"
                     android:layout_marginTop="30dp"
                     android:background="@drawable/spinner_style"

                    />


            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:inputType="number"
                    android:id="@+id/Mediabhd"
                    android:hint="@string/Mediabhd"
                    android:background="@drawable/textfield_style"

                    />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/Holzmenge"
                    android:hint="@string/holzmenge"
                    android:background="@drawable/textfield_style"
                    android:inputType="number"

                    />


            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/bachabschnitt"
                    android:hint="@string/bachabschnitt"
                    android:background="@drawable/textfield_style"
                    android:inputType="number"

                    />





            <Button
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Speichern"
                    android:id="@+id/speichern" android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_style"
                    android:onClick="onclick"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>