<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="at.itkolleg.android.noterra.InspectionActivity"
             tools:ignore="MergeRootFrame">

    <Button
            android:id="@+id/formbutton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="43dp"
            android:text="Formular"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/notebutton"
            android:layout_alignStart="@+id/notebutton"
            android:onClick="FormOnClick"/>

    <Button
            android:id="@+id/notebutton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Notiz"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/formbutton"
            android:layout_centerHorizontal="true"
            android:onClick="NoteOnClick"/>

    <Button
            android:id="@+id/gpsbutton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="GPS"
            android:layout_gravity="center"
            android:layout_below="@+id/notebutton"
            android:layout_alignLeft="@+id/notebutton"
            android:layout_alignStart="@+id/notebutton"
            android:onClick="GpsOnClick"/>

    <Button
            android:id="@+id/finishbutton"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="39dp"
            android:text="Fertigstellen"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/gpsbutton"
            android:layout_alignStart="@+id/gpsbutton"
            android:onClick="FinishOnClick"/>


</RelativeLayout>
