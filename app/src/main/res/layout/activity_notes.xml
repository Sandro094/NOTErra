<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/hellgrun"
              tools:context="at.itkolleg.android.noterra.NotesActivity"
              tools:ignore="MergeRootFrame">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="at.itkolleg.android.noterra.NotesActivity">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:focusableInTouchMode="true" android:id="@+id/noteLayout">

            <ImageButton
                    android:layout_marginTop="80dp"
                    android:id="@+id/camerabutton"
                    android:background="@drawable/camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="29dp"/>


            <ImageButton
                    android:id="@+id/deleteaudiobutton"
                    android:background="@drawable/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginEnd="31dp"/>

            <ImageButton
                    android:layout_marginLeft="90dp"
                    android:id="@+id/recordbutton"
                    android:background="@drawable/record"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="left"/>

            <ImageButton
                    android:layout_marginTop="-150dp"
                    android:layout_marginLeft="310dp"
                    android:id="@+id/deletebutton"
                    android:background="@drawable/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageButton
                    android:id="@+id/stopbutton"
                    android:background="@drawable/stop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="40dp"/>

            <ImageButton
                    android:layout_marginLeft="40dp"
                    android:id="@+id/playbutton"
                    android:background="@drawable/play"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    />

            <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:textColor="#FFFF"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-40dp"/>

            <ImageView
                    android:layout_marginTop="-320dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/imageview"
                    android:layout_width="250dp"
                    android:layout_height="150dp"/>

            <Button
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:text="Speichern"
                    android:id="@+id/savebutton" android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_style"
                    android:onClick="save"/>

            <EditText
                    android:layout_width="330dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-220dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/textfield_style"
                    android:id="@+id/notetextfield"
                    android:hint="@string/notetextfield"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:maxLines="10"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>