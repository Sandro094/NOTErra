
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

              tools:context="at.itkolleg.android.noterra.Holzablagerungen"
              android:background="@color/Hintergrundfarbe" android:focusableInTouchMode="true">



    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:focusableInTouchMode="true" >
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ablagerung: "
                    android:id="@+id/textView2"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black" android:textSize="20dp"/>

<RadioGroup android:layout_width="fill_parent"  android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_height="wrap_content" android:id="@+id/ablagerung">
            <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Bau"
                    android:id="@+id/Bauaushub"
                    android:topLeftRadius="8dip"
                    android:background="@drawable/testtop"
                    android:onClick="ablagerungsArt"/>

            <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/felsblock"
                    android:id="@+id/fesblock"
                    android:background="#F6E398"
                    android:onClick="ablagerungsArt"/>

            <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6E398"
                    android:text="@string/mull"
                    android:id="@+id/mull"
                    android:onClick="ablagerungsArt"/>

            <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6E398"
                    android:text="@string/schotter"
                    android:id="@+id/schotter"
                    android:onClick="ablagerungsArt"/>

            <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/testbot"
                    android:text=""
                    android:id="@+id/freiwahl"
                    android:bottomLeftRadius="8dip"
                    android:onClick="ablagerungsArt"/>


</RadioGroup>
            <EditText
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:id="@+id/sonstiges"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="-35dp"
                    android:singleLine="true"
                    android:background="@drawable/apptheme_textfield_default_holo_light"
                    android:hint="Sonstiges"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/textfield_style"
                    android:id="@+id/Beschreibung"
                    android:hint="@string/Beschreibung"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:maxLines="10" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/Großausmaß"
                    android:hint="@string/großaus"
                    android:background="@drawable/textfield_style"
                    android:inputType="number" />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:id="@+id/laenge_bachabschnitt"
                    android:hint="@string/lange_bachabschnitt"
                    android:background="@drawable/textfield_style"
                    android:inputType="number"/>

            <Button
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Speichern"
                    android:id="@+id/speichern" android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_style"
                    android:onClick="save"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>